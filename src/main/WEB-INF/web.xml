<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">

    <!-- Display Name -->
    <display-name>RestaurantApp</display-name>

<!-- Controller Servlet -->
<servlet>
    <servlet-name>ControllerServlet</servlet-name>
    <servlet-class>controller.ControllerServlet</servlet-class>  <!-- Ensure the class path is correct -->
</servlet>

<servlet-mapping>
    <servlet-name>ControllerServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>  <!-- Maps requests to /dashboard -->
</servlet-mapping>
<!-- ErrorSubmissionServlet to handle error-related routes -->
<servlet>
    <servlet-name>ErrorSubmissionServlet</servlet-name>
    <servlet-class>controller.ErrorSubmissionServlet</servlet-class>
</servlet>

<!-- Error Submission Mappings -->
<servlet-mapping>
    <servlet-name>ErrorSubmissionServlet</servlet-name>
    <url-pattern>/submit</url-pattern>  <!-- Handles submission -->
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ErrorSubmissionServlet</servlet-name>
    <url-pattern>/form</url-pattern>  <!-- Handles form display -->
</servlet-mapping>
<servlet-mapping>
    <servlet-name>ErrorSubmissionServlet</servlet-name>
    <url-pattern>/confirmation</url-pattern>  <!-- Handles confirmation page -->
</servlet-mapping>

<servlet-mapping>
    <servlet-name>ErrorSubmissionServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>  <!-- Redirects to dashboard -->
</servlet-mapping>

    <!-- FeedbackSubmissionServlet to handle feedback form submissions -->
    <servlet>
        <servlet-name>FeedbackSubmissionServlet</servlet-name>
        <servlet-class>controller.FeedbackSubmissionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FeedbackSubmissionServlet</servlet-name>
        <url-pattern>/submitFeedback</url-pattern> <!-- URL pattern for handling feedback submissions -->
    </servlet-mapping>

</web-app>
