<web-app xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
version="3.0">

    <!-- Display Name -->
    <display-name>RestaurantApp</display-name>

    <!-- Servlet Definition for ErrorSubmissionServlet -->
    <servlet>
        <servlet-name>ErrorSubmissionServlet</servlet-name>
        <servlet-class>controller.ErrorSubmissionServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping for Error Submission -->
    <servlet-mapping>
        <servlet-name>ErrorSubmissionServlet</servlet-name>
        <url-pattern>/error/submit</url-pattern>  <!-- Handles form submission -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorSubmissionServlet</servlet-name>
        <url-pattern>/error/form</url-pattern>   <!-- Displays form -->
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorSubmissionServlet</servlet-name>
        <url-pattern>/error/confirmation</url-pattern>  <!-- Shows confirmation page -->
    </servlet-mapping>

</web-app>
